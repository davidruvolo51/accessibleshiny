{
  "name": "accessibleshiny",
  "version": "1.0.0",
  "author": "dcruvolo",
  "license": "ISC",
  "description": "library of accessible ui components for shiny",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf public/ .cache/ css",
    "dev": "parcel build src/*.scss -d css --no-cache --no-source-maps",
    "rename": "for f in css/*.css; do mv \"$f\" \"${f/.css/.min.css}\"; done && echo \"renamed css files\";",
    "build": "yarn dev && yarn rename"
  },
  "dependencies": {
    "autoprefixer": "^9.7.4",
    "cssnano": "^4.1.10",
    "sass": "^1.25.0"
  },
  "postcss": {
    "modules": false,
    "plugins": {
      "autoprefixer": {
        "overrideBrowserslist": [
          ">1%",
          "last 4 versions",
          "Firefox ESR",
          "not ie < 9"
        ],
        "flexbox": "no-2009"
      },
      "cssnano": {
        "calc": true,
        "discardComments": {
          "removeAll": true
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidruvolo51/accessibleshiny"
  },
  "bugs": {
    "url": "https://github.com/davidruvolo51/accessibleshiny/issues"
  },
  "keywords": [
    "css",
    "r",
    "shiny"
  ],
  "devDependencies": {
    "postcss-modules": "^1.5.0"
  }
}
